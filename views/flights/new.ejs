<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-name">Airline:</label>
    <input type="text" name="airline" id="airline-name">

    <label for="airport-name">Airport:</label>
    <input type="text" name="airport" id="airport-name">
    
    <label for="flight-number">Flight Number:</label>
    <input type="text" name="flightNo" id="flight-number">
    
    <label for="depart-on">Departs</label>
    <input type="text" name="departs" id="depart-on">
    
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include('../partials/footer') %>